rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    // User profiles - write own only; read own, partner's, or any user with soulLinkCode (for link-by-code)
    match /users/{userId} {
      allow read: if request.auth != null && (
        request.auth.uid == userId ||
        get(/databases/$(database)/documents/users/$(userId)).data.soulLinkPartnerId == request.auth.uid ||
        get(/databases/$(database)/documents/users/$(userId)).data.soulLinkCode != null
      );
      allow write: if request.auth != null && request.auth.uid == userId;
    }

    // Incoming pulses (Soul-Link "Send Pulse") - recipient can read/delete; sender can create
    match /users/{userId}/incomingPulses/{pulseId} {
      allow create: if request.auth != null && request.resource.data.fromUserId == request.auth.uid;
      allow read, delete: if request.auth != null && request.auth.uid == userId;
    }
    
    // Journal entries - users can only access their own entries
    match /journalEntries/{entryId} {
      allow read, write: if request.auth != null && 
                           resource.data.userId == request.auth.uid;
      allow create: if request.auth != null && 
                       request.resource.data.userId == request.auth.uid;
    }
    
    // Referrals - users can read their own referrals
    match /referrals/{referralId} {
      allow read: if request.auth != null;
      allow create: if request.auth != null;
      allow update: if request.auth != null && 
                       resource.data.referrerId == request.auth.uid;
    }
    
    // Premium status - users can only read/write their own premium status
    match /premiumUsers/{userId} {
      allow read: if request.auth != null && request.auth.uid == userId;
      allow write: if request.auth != null && request.auth.uid == userId;
    }
    
    // Deny all other access by default
    match /{document=**} {
      allow read, write: if false;
    }
  }
}